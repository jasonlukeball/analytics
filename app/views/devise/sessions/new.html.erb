<div class="devise-wrapper">
    <div class="row">
      <div class="col-xs-7 sign-up-log-in">

        <h2>Log In.</h2>
        <br>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

            <%= form_group_tag(devise_error_messages![:email]) do %>
                <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: "Email" %>
            <% end %>

            <%= form_group_tag(devise_error_messages![:password]) do %>
                <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: "Password" %>
            <% end %>

            <div class="form-group">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me, id: 'remember-me-label'%>
              <%= link_to "Forgot your password?", new_admin_password_path, class: 'forgot-password-link' %>
            </div>

            <div class="actions">
              <%= f.submit "Log in" %>
            </div>

            <br>
            <div class="dont-have-an-account">
              <span>Don't have an account?</span>
              <%= link_to "Sign Up", new_admin_registration_path, id: 'login-sign-up-button' %>
            </div>

        <% end %>
      </div>
    </div>
</div>

